{
  "name": "devkit",
  "private": true,
  "workspaces": [
    "@querycap/*",
    "@querycap-ui/*",
    "@querycap-dev/*"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "release": "lerna version --conventional-commits --no-commit-hooks",
    "ncu": "lerna exec -- ncu -u",
    "clean": "rm -rf @querycap*/*/node_modules",
    "fmt": "prettier --write @querycap*/{,**/}{,**/}*.{ts,tsx,json,md}",
    "test": "jest --coverage",
    "build": "lerna exec monobundle",
    "start": "devkit dev sg",
    "prepare": "yarn test"
  },
  "devkit": {
    "dev": "webpack-browser-sync --config webpack.config.ts --historyApiFallback --index=../index.html",
    "build": "webpack --config webpack.config.ts"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "moduleNameMapper": {
      "^@querycap-dev/([^/]+)$": "<rootDir>/@querycap-dev/$1/index.ts",
      "^@querycap/([^/]+)$": "<rootDir>/@querycap/$1/index.ts",
      "^@querycap-ui/([^/]+)$": "<rootDir>/@querycap-ui/$1/index.ts"
    },
    "moduleFileExtensions": [
      "tsx",
      "ts",
      "json",
      "jsx",
      "js"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "testRegex": ".*/__tests__/.+\\.(generator|test|spec)\\.(ts|tsx)$"
  },
  "husky": {
    "hooks": {
      "post-merge": "yarn",
      "pre-commit": "lint-staged && pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --quiet"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "arrowParens": "always",
    "printWidth": 120,
    "jsxBracketSameLine": true
  },
  "eslintConfig": {
    "extends": [
      "@querycap-dev/eslint-config"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "@typescript-eslint/ban-ts-comment": "off",
      "func-style": "off",
      "@typescript-eslint/no-unsafe-return": "off",
      "@typescript-eslint/ban-types": "off",
      "@typescript-eslint/restrict-template-expressions": "off",
      "@typescript-eslint/no-unsafe-assignment": "off",
      "@typescript-eslint/no-unsafe-call": "off",
      "@typescript-eslint/no-unsafe-member-access": "off"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/preset-env": "^7.11.0",
    "@babel/runtime-corejs3": "^7.11.2",
    "@babel/types": "^7.11.0",
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@morlay/webpack-browser-sync": "^0.0.0",
    "@reactorx/core": "^0.20.7",
    "@reactorx/request": "^0.20.7",
    "@testing-library/react": "^10.4.8",
    "@types/babel-plugin-macros": "^2.8.2",
    "@types/babel__preset-env": "^7.9.0",
    "@types/benchmark": "^1.0.33",
    "@types/jest": "^26.0.9",
    "@types/lodash": "^4.14.159",
    "@types/node": "^14.0.27",
    "@types/prismjs": "^1.16.1",
    "@types/react": "^16.9.44",
    "@types/react-dom": "^16.9.8",
    "@types/webpack": "^4.41.21",
    "axios": "^0.19.2",
    "babel-jest": "^26.2.2",
    "benchmark": "2.1.4",
    "date-fns": "^2.15.0",
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "localforage-memoryStorageDriver": "0.9.2",
    "lodash": "^4.17.19",
    "lodash-es": "4.17.15",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "prismjs": "1.21.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rxjs": "^6.6.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7",
    "webpack": "^4.44.1",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-cli": "^3.3.12"
  }
}
