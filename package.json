{
  "name": "devkit",
  "private": true,
  "workspaces": [
    "@querycap/*",
    "@querycap-ui/*"
  ],
  "scripts": {
    "release": "lerna version --conventional-commits --no-commit-hooks",
    "ncu": "lerna exec -- ncu -u",
    "clean": "rm -rf @querycap*/*/node_modules",
    "fmt": "prettier --write @querycap*/{,**/}{,**/}*.{ts,tsx,json,md}",
    "test": "jest --coverage",
    "build": "lerna exec monobundle",
    "prepare": "yarn test"
  },
  "devkit": {
    "dev": "webpack-browser-sync --config webpack.config.ts --historyApiFallback --index=../index.html",
    "build": "webpack --config webpack.config.ts"
  },
  "dependencies": {
    "@querycap-dev/dev-deps": "0.2.1",
    "@querycap-dev/devkit": "*",
    "@querycap-dev/generate-svg2tsx": "0.3.6",
    "@querycap-dev/monobundle": "0.4.9",
    "@querycap-dev/webpack-preset": "0.5.x",
    "@querycap-dev/webpack-preset-assets": "0.5.x",
    "@querycap-dev/webpack-preset-html": "0.5.x",
    "@querycap-dev/webpack-preset-ts": "0.5.x",
    "@reactorx/core": "0.20.x",
    "@reactorx/request": "0.20.x",
    "@testing-library/react": "10.0.x",
    "@types/benchmark": "1.0.31",
    "@types/lodash": "4.14.x",
    "@types/node": "13.9.x",
    "@types/prismjs": "1.16.0",
    "@types/react": "16.9.x",
    "@types/react-dom": "16.9.x",
    "axios": "0.19.x",
    "benchmark": "2.1.4",
    "date-fns": "2.11.0",
    "localforage-memoryStorageDriver": "0.9.2",
    "lodash": "4.17.15",
    "lodash-es": "4.17.15",
    "prismjs": "1.19.0",
    "react": "experimental",
    "react-dom": "experimental",
    "rxjs": "6.5.4"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "moduleNameMapper": {
      "^@querycap/([^/]+)$": "<rootDir>/@querycap/$1/index.ts",
      "^@querycap-ui/([^/]+)$": "<rootDir>/@querycap-ui/$1/index.ts"
    },
    "moduleFileExtensions": [
      "tsx",
      "ts",
      "json",
      "jsx",
      "js"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "testRegex": ".*/__tests__/.+\\.(generator|test|spec)\\.(ts|tsx)$"
  },
  "husky": {
    "hooks": {
      "post-merge": "yarn",
      "pre-commit": "lint-staged && pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --quiet"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "arrowParens": "always",
    "printWidth": 120,
    "jsxBracketSameLine": true
  },
  "eslintConfig": {
    "extends": [
      "@querycap-dev/eslint-config"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "@typescript-eslint/ban-ts-ignore": "off"
    }
  }
}
